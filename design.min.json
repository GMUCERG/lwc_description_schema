{
    "name": "MyAEAD128-TI3-v1",
    "description": "Hardware implementation of MyAEAD128 protected against first order DPA attacks.",
    "authors": [
        "Kamyar Mohajerani"
    ],
    "url": "https://cryptography.gmu.edu/",
    "rtl": {
        "sources": [
            "src_rtl/v1/MyPKG.vhd",
            "src_rtl/v1/api.v",
            "src_rtl/v1/LWC.v"
        ],
        "top": "LWC",
        "language": {
            "vhdl": {
                "version": "2008"
            }
        }
    },
    "lwc": {
        "algorithm": "myaead128v2",
        "pt_block_bits": 128,
        "ad_block_bits": 128,
        "sca_protection": {
            "attacks": [
                "timing",
                "sda",
                "dpa"
            ],
            "dpa_order": 1
        },
        "ports": {
            "pdi": {
                "bit_width": 32,
                "num_shares": 3
            },
            "rdi": {
                "bit_width": 128
            }
        }
    }
}