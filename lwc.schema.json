{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://cryptography.gmu.edu/lwc.schema.json",
    "title": "Design",
    "description": "Captures attributes of an LWC hardware implementation.",
    "type": "object",
    "properties": {
        "name": {
            "title": "Name",
            "description": "A unique identifier for the design. It can consist of English letters, digits, dashes, and underscores and must start with a letter.",
            "type": "string",
            "pattern": "^[A-Za-z][-\\w]+$"
        },
        "description": {
            "title": "Description",
            "description": "A short description of the design.",
            "type": "string"
        },
        "author": {
            "description": "Author or list of authors and developers who have contributed to this implementation.",
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            }
        },
        "url": {
            "description": "Uniform Resource Locator pointing to a webpage or source repository associated with this design or its author(s).",
            "type": "string",
            "format": "uri"
        },
        "license": {
            "description": "License or licenses covering this design's use and distribution. Use SPDX (ISO/IEC 5962:2021) short identifiers when applicable.",
            "type": [
                "string",
                "array"
            ],
            "items": {
                "type": "string"
            },
            "examples": [
                "SHL-2.1"
            ]
        },
        "version": {
            "description": "Design version.",
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)(\\.(0|[1-9]\\d*)(\\.(0|[1-9]\\d*))?)?$",
            "examples": [
                "0.0.1"
            ],
            "optional": true
        },
        "rtl": {
            "title": "RTL",
            "description": "Details of the synthesizable RTL design",
            "type": "object",
            "properties": {
                "sources": {
                    "description": "Non-empty list of HDL source file paths in correct compilation order. All paths must be relative to the location of the configuration file. Path separator is `/` (slash) on all platforms. Paths are case-sensitive and should not contain whitespaces. HDL language is inferred from the file extension.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[-\\w\\.]+(/[-\\w\\.]+)*$"
                    }
                },
                "includes": {
                    "description": "Non-empty list of HDL include file paths, such as Verilog headers. Include files are not directly compiled but need to be present for elaboration of design. Order is arbitrary. All paths must be relative to the location of the configuration file. Path separator is `/` (slash) on all platforms. Paths are case-sensitive and should not contain whitespaces.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[-\\w\\.]+(/[-\\w\\.]+)*$"
                    },
                    "default": []
                },
                "top": {
                    "description": "Name of top-level RTL entity/module.",
                    "type": "string",
                    "default": "LWC"
                },
                "clock": {
                    "description": "Top level RTL clock signal. Only a single clock is supported by LWC API",
                    "type": "object",
                    "properties": {
                        "port": {
                            "description": "Name of the top-level RTL clock input.",
                            "type": "string",
                            "default": "clk"
                        }
                    },
                    "default": {}
                },
                "reset": {
                    "description": "Top level reset signal. Only a single reset is supported by LWC API.",
                    "type": "object",
                    "properties": {
                        "port": {
                            "description": "Name of top-level RTL reset input.",
                            "type": "string",
                            "default": "reset"
                        },
                        "active_high": {
                            "description": "Polarity of the reset signal. Active-high (positive) if true, otherwise active-low.",
                            "type": "boolean",
                            "default": true
                        },
                        "asynchronous": {
                            "description": "Whether reset is asynchronous with respect to `rtl.clock`.",
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "default": {}
                },
                "parameters": {
                    "description": "Top-level design parameters or generics specified as a key-value map. The default value of each parameter is overridden by synthesis tool, simulator, testbench, or wrapper. For the best tool compatibility, we only support integer and string values.",
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        }
                    },
                    "examples": [
                        {
                            "G_NUM_SHARES": 2,
                            "G_BACKDOOR": 0
                        }
                    ]
                },
                "language": {
                    "title": "Design Languages",
                    "description": "Information about Hardware Description/Design Language(s).",
                    "type": "object",
                    "properties": {
                        "vhdl": {
                            "$ref": "#/$defs/vhdl"
                        },
                        "verilog": {
                            "$ref": "#/$defs/verilog"
                        },
                        "systemverilog": {
                            "$ref": "#/$defs/systemverilog"
                        }
                    },
                    "optional": true,
                    "default": {}
                }
            },
            "required": [
                "sources",
                "top"
            ],
            "additionalProperties": false
        },
        "tb": {
            "title": "Testbench",
            "description": "Details of test-bench used for verification of top-level design. [Optional]",
            "type": "object",
            "properties": {
                "sources": {
                    "description": "Source files used only for verification. Should _not_ contain any of the files included in 'rtl.sources'.",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[-\\w\\.]+(/[-\\w\\.]+)*$"
                    }
                },
                "includes": {
                    "description": "HDL include file paths",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[-\\w\\.]+(/[-\\w\\.]+)*$"
                    },
                    "default": []
                },
                "top": {
                    "description": "Name of top-level test entity or module.",
                    "type": "string"
                },
                "parameters": {
                    "description": "Testbench parameter or generics specified as a key-value map. The default value of each parameter is overridden by the simulator. For the best tool compatibility, we only support integer and string values.",
                    "type": "object",
                    "patternProperties": {
                        ".+": {
                            "type": [
                                "integer",
                                "string"
                            ]
                        }
                    },
                    "examples": [
                        {
                            "G_TEST_MODE": 0
                        }
                    ]
                },
                "language": {
                    "title": "Verification Languages",
                    "description": "Information about HDL or programming languages used in the testbench.",
                    "type": "object",
                    "properties": {
                        "vhdl": {
                            "$ref": "#/$defs/vhdl"
                        },
                        "verilog": {
                            "$ref": "#/$defs/verilog"
                        },
                        "systemverilog": {
                            "$ref": "#/$defs/systemverilog"
                        },
                        "python": {
                            "type": "object",
                            "properties": {
                                "version": {
                                    "type": "string"
                                },
                                "framework": {
                                    "type": "string",
                                    "enum": [
                                        "cocotb"
                                    ],
                                    "default": "cocotb"
                                }
                            }
                        }
                    },
                    "optional": true
                }
            },
            "required": [
                "sources",
                "top"
            ],
            "additionalProperties": false,
            "optional": true
        },
        "lwc": {
            "title": "LWC",
            "description": "LWC-specific meta-data",
            "type": "object",
            "properties": {
                "algorithm": {
                    "description": "LWC AEAD/Hash algorithm(s) supported by this design. Should follow [SUPERCOP](https://bench.cr.yp.to/primitives-aead.html) naming conventions and uniquely identify the scheme's variant and version. In case of duplicates, the second instance indicates support for AEAD and Hash algorithms with the same name.",
                    "type": [
                        "string",
                        "array"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "examples": [
                        [
                            "giftcofb128v1"
                        ],
                        [
                            "romulusn1v12"
                        ],
                        [
                            "gimli24v1",
                            "gimli24v1"
                        ]
                    ]
                },
                "input_sequence": {
                    "description": "Order in which different input segment types should be fed to PDI.",
                    "type": "object",
                    "properties": {
                        "encrypt": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "ad",
                                    "pt",
                                    "npub",
                                    "tag"
                                ]
                            },
                            "default": [
                                "npub",
                                "ad",
                                "pt",
                                "tag"
                            ]
                        },
                        "decrypt": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "enum": [
                                    "ad",
                                    "ct",
                                    "npub",
                                    "tag"
                                ]
                            },
                            "default": [
                                "npub",
                                "ad",
                                "ct",
                                "tag"
                            ]
                        }
                    },
                    "default": {},
                    "required": [
                        "encrypt",
                        "decrypt"
                    ]
                },
                "pt_block_bits": {
                    "description": "Algorithm's size of plaintext/ciphertext 'blocks' in bits. This is the number of bits that the algorithm operates upon during its basic operations. Potentially used for the evaluation of some performance metrics.",
                    "type": "integer"
                },
                "ad_block_bits": {
                    "description": "Algorithm's size of associated-data 'blocks' in bits. This is the number of bits that the algorithm operates upon during its basic operations. Potentially used for the evaluation of some performance metrics.",
                    "type": "integer"
                },
                "key_bits": {
                    "type": "integer",
                    "default": 128
                },
                "npub_bits": {
                    "type": "integer",
                    "default": 128
                },
                "tag_bits": {
                    "type": "integer",
                    "default": 128
                },
                "hash": {
                    "type": "object",
                    "properties": {
                        "supported": {
                            "description": "Whether this implementation supports hashing.",
                            "type": "boolean",
                            "default": false
                        },
                        "digest_bits": {
                            "description": "Size of hash digest (output) in bits.",
                            "type": "integer",
                            "default": 128
                        }
                    }
                },
                "ports": {
                    "type": "object",
                    "description": "Description of LWC ports.",
                    "properties": {
                        "pdi": {
                            "description": "Public Data Input port",
                            "type": "object",
                            "properties": {
                                "bit_width": {
                                    "description": "Width of each share of PDI data (bits). Width of 'pdi_data' signal would be `pdi.bit_width × pdi.num_shares` bits.",
                                    "type": "integer",
                                    "minimum": 8,
                                    "maximum": 32,
                                    "default": 32
                                },
                                "num_shares": {
                                    "description": "Number of PDI shares. Default is 1 (unprotected).",
                                    "type": "integer",
                                    "default": 1
                                }
                            }
                        },
                        "sdi": {
                            "description": "Secret Data Input port",
                            "type": "object",
                            "properties": {
                                "bit_width": {
                                    "description": "Width of each share of SDI data (bits). Width of `sdi_data` signal would be `sdi.bit_width × sdi.num_shares` bits.",
                                    "type": "integer",
                                    "minimum": 8,
                                    "maximum": 32,
                                    "default": 32
                                },
                                "num_shares": {
                                    "description": "Number of SDI shares.",
                                    "type": "integer",
                                    "minimum": 1,
                                    "default": 1
                                }
                            }
                        },
                        "rdi": {
                            "description": "Random Data Input port.",
                            "type": "object",
                            "properties": {
                                "bit_width": {
                                    "type": "integer",
                                    "minimum": 0,
                                    "maximum": 2048,
                                    "default": 0
                                }
                            }
                        }
                    },
                    "required": [
                        "pdi"
                    ],
                    "default": {}
                },
                "sca_protection": {
                    "type": "object",
                    "description": "Implemented countermeasures against side-channel attacks.",
                    "properties": {
                        "target": {
                            "type": "array",
                            "description": "Type of side-channel analysis attack(s) against which this design is assumed to be secure.",
                            "items": {
                                "type": "string"
                            },
                            "examples": [
                                [
                                    "spa",
                                    "dpa",
                                    "cpa",
                                    "timing"
                                ],
                                [
                                    "dpa",
                                    "sifa",
                                    "dfia"
                                ]
                            ]
                        },
                        "masking_schemes": {
                            "description": "Masking scheme(s) applied in this implementation. Could be name/abbreviation of established schemes (e.g., \"DOM\", \"TI\") or reference to a publication.",
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": [],
                            "examples": [
                                [
                                    "TI"
                                ],
                                [
                                    "DOM",
                                    "https://eprint.iacr.org/2022/000.pdf"
                                ]
                            ]
                        },
                        "order": {
                            "description": "Claimed order of protectcion. 0 means unprotected.",
                            "type": "integer",
                            "default": 0
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "order"
                    ]
                }
            },
            "required": [
                "algorithm",
                "ports",
                "pt_block_bits",
                "ad_block_bits",
                "sca_protection"
            ]
        }
    },
    "$defs": {
        "file_resource": {
            "type": [
                "string",
                "object"
            ],
            "pattern": "^[-\\w\\.]+(/[-\\w\\.]+)*$"
        },
        "vhdl": {
            "title": "VHDL",
            "description": "Common VHDL features supported by all VHDL source files. VHDL files must have a `.vhd` or `.vhdl` extension.",
            "type": "object",
            "properties": {
                "version": {
                    "description": "VHDL language standard",
                    "type": "string",
                    "enum": [
                        "1993",
                        "2000",
                        "2002",
                        "2008"
                    ],
                    "default": "1993"
                },
                "synopsys": {
                    "type": "boolean",
                    "description": "Use of non-standard Synopsys packages which were placed in the IEEE namespace, e.g. 'std_logic_arith'. Dependence on such packages is _strongly_ discouraged.",
                    "default": false
                }
            }
        },
        "verilog": {
            "title": "Verilog",
            "description": "Common Verilog (pre-SystemVerilog) language features supported by all Verilog source files. Verilog files must have a `.v` extension.",
            "type": "object",
            "properties": {
                "version": {
                    "description": "Verilog language standard",
                    "type": "string",
                    "enum": [
                        "1995",
                        "2001"
                    ],
                    "default": "2001"
                }
            }
        },
        "systemverilog": {
            "title": "SystemVerilog",
            "description": "SystemVerilog (IEEE 1800-2005 and onwards) language features supported by all SystemVerilog source files. SystemVerilog files must have a `.sv` extension.",
            "type": "object",
            "properties": {
                "version": {
                    "description": "SystemVerilog language standard",
                    "type": "string",
                    "enum": [
                        "2005",
                        "2009"
                    ],
                    "default": "2009"
                }
            }
        }
    },
    "required": [
        "name",
        "rtl",
        "lwc"
    ],
    "additionalProperties": false
}